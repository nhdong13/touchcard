<script type="text/javascript">
  ShopifyApp.ready(function(){
    ShopifyApp.Bar.initialize({
      title: "Home",
      icon: "<%= asset_path('faveicon.png') %>"
    });
  });
</script>
<h3>Products</h3>
<div class="well">
  <table>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <a href='https://<%="#{@shop_session.url}/admin/products/#{product.id}"%>' target="_blank"> <%= product.id %> </a> - <%= product.title %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
