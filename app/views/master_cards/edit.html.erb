<% if @master_card.template == "thank you" %>
  <div class="row">
    <div class="col-md-3 col-md-offset-9">
        <%= link_to 'Switch to Coupon Template', edit_master_card_path(:id => @master_card.id, :template => "coupon") %></h4>
    </div>
  </div>
  <h1> Create Your <%= @master_card.template.titleize %> Card</h1>
  <div class="row">
    <div class="col-md-10">
      <h4>Get started with our postcard builder.
        You can choose to remove editable areas and upload custom backgrounds.
        To add a dynamic coupon area, 
        <%= link_to 'switch to the coupon card template', edit_master_card_path(:id => @master_card.id, :template => "coupon") %></h4>
    </div>
  </div>
  <%= render 'master_cards/edit_thank' %>
<% else %>
  <div class="row">
    <div class="col-md-3 col-md-offset-9">
        <%= link_to 'Switch to Thank You Template', edit_master_card_path(:id => @master_card.id, :template => "thank you") %></h4>
    </div>
  </div>
  <h1> Create Your <%= @master_card.template.titleize %> Card</h1>
  <div class="row">
    <div class="col-md-10">
      <h4>Get stated with our postcard builder.
        You can choose to remove editable areas and upload custom backgrounds.
        To remove the coupon area, 
        <%= link_to 'switch to the thank you card template', edit_master_card_path(:id => @master_card.id, :template => "thank you") %></h4>
    </div>
  </div>
  <%= render 'master_cards/edit_coupon' %>
<% end %>
