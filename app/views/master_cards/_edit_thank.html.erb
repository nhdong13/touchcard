<%= form_for @master_card do |f| %>
  <div class="row">
    <div class="col-md-8 card_editor">
      <h4 style="display: inline;">ADDRESS SIDE</h4>
      <a href="#" id="custom_background_front" style="display: inline; float: right;">Go Custom - Add Background</a>
      <div class="front_images">
        <% if @master_card.image_back == nil %>
          <%= image_tag('postage-area-image.png', :class => "card_display") %>
        <% else %>
          <%= image_tag(@master_card.image_back, :class => "card_display custom_back") %>
          <%= image_tag('postage-area-image.png', :class => "address_overlay") %>
        <% end %>
        <%= image_tag(@master_card.logo, :class => "address_logo") %>
        <div class="custom_background_box">
        <%= f.label :image_back, "Custom Background" %>
        <%= f.file_field :image_back, :class => "form-control" %>
        </div>
        <div class="logo_box">
        <%= f.label :logo, "Logo" %>
        <%= f.file_field :logo, :class => "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 card_editor">
      <h4 style="display: inline;">MESSAGE SIDE</h4>
      <a href="#" id="no_text" style="display: inline; float: right;">Go Custom - Remove Editable Text</a>
      <% if @master_card.image_front == nil %>
        <%= image_tag('thankyou-bg.png', :class => "card_display") %>
      <% else %>
        <%= image_tag(@master_card.image_front, :class => "card_display") %>
      <% end %>

      <div class="col-xs-5 col-xs-offset-6 card_editor_fields">
        <%= f.label :title_front, "Title" %>
        <%= f.text_field :title_front, :class => "form-control card_title" %>

        <%= f.label :text_front, "Message" %>
        <%= f.text_area :text_front, :rows => 10, :class => "form-control card_message" %>
      </div>

      <div class="custom_background_box">
      <%= f.label :image_front, "Custom Background" %>
      <%= f.file_field :image_front, :class => "form-control" %>
      </div>
    </div>
  </div>
  <%= f.submit "Next", onClick: "ShopifyApp.Bar.loadingOn()", class: "btn btn-lg btn-primary", id: "wizard2_submit" %>
<% end %>
