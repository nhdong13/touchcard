<div class="send-error-report">
  <div><strong>Campaign information</strong></div>
  <br/>
  <table>
    <tr>
      <th><strong>Name</strong></th>
      <th><strong>Status</strong></th>
      <th><strong>Budget</strong></th>
      <th><strong>Date</strong></th>
    </tr>
    <tr>
      <td><%= @campaign[:campaign_name] %></td>
      <td><%= @campaign[:campaign_status] %></td>
      <td><%= @campaign[:budget] %></td>
      <td><%= @campaign[:send_date_start] %> - <%= @campaign[:send_date_end].blank? ? "Ongoing" : @campaign[:send_date_end] %></td>
    </tr>
  </table>
  <br/>
  <div>
    <ul>
      <li><span>Number of sent postcards: <%= @sending_result[:card_sent_amount] %></span></li>
      <li><span>Number of error postcards/ Total postcard: <%= @sending_result[:error_cards_amount] %>/<%= @sending_result[:total_card] %></span></li>
      <li><span>Number of pending postcards: <%= @sending_result[:pending_card] %></span></li>
      <li>
        <span>Number of errors: </span><br/>
        <ul>
          <% @error_summary.each do |k, v| %>
            <li><span><%= k %>: <%= v %> postcards</span></li>
          <% end %>
        </ul>
      </li>
    </ul>
  </div>
  <br/>
  <div><strong>Postcard error information</strong></div>
  <br/>
  <div>
    <table>
      <tr>
        <th><strong>ID</strong></th>
        <th><strong>Error</strong></th>
      </tr>
      <% @error_detail.find_each do |postcard| %>
        <tr>
          <td><%= postcard.id %></td>
          <td><%= postcard.error %></td>
        </tr>
      <% end %>
    </table>
    <br/>
  </div>
</div>