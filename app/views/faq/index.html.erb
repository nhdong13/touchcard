<%= currently_at "Help" %>

<div class="panel faq">
  <section>
    <h3>FAQ</h3>
    <dl class="mdl-list">
      <% @questions.each_with_index do |question, i| %>
          <dt class="mdl-list__item">
            <strong><%= "#{ i + 1}) #{question[:question]}" %></strong>
          </dt>
          <dd class="mdl-list__item-secondary-content"><%= question[:answer].html_safe %></dd>
          <br>
      <% end %>
    </dl>
  </section>

  <section>
    <h3 class="uppercase">Support</h3>
    For further questions please contact us via the chat widget below or email us at <a href="mailto:support@touchcard.co" target="_blank">support@touchcard.co</a>
  </section>
</div>
