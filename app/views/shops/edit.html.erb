<%= currently_at "Settings" %>

<div class="panel">
  <section>
    <br>
    <% if @shop.current_subscription %>
      You are subscribed to <strong><%= @shop.current_subscription.quantity %></strong> postcards per month. &nbsp
      <%= link_to 'Edit', edit_subscriptions_path, class: "mdc-button mdc-button--stroked mdc-button--dense" %>
    <% else %>
      You are not currently subscribed.
    <% end %>
  </section>
</div>


