<h1>General Settings</h1>
<%= form_for @shop do |f| %>
  <div class="row">
    <div class="well colo-md-6 col-md-offset-3">
      <h3>Billing options</h3>
      <p><b>Current Credits Remaining:</b> <%= @shop.credit %></p>
      <p>I want to send cards to <%= radio_button_tag(:customer_pct, 50) %><%= label_tag(:customer_pct_50, "50%") %> or
      <%= radio_button_tag(:customer_pct, 100) %><%= label_tag(:customer_pct_100, "100%") %> of my customers</p>
      <p>Credits Purchased Monthly: <%= @shop.last_month %></p>
      <p>New Customers in the last month: <%= @last_month %>
    </div>
  </div>
  <div class="row">
    <div class="well col-md-6 col-md-offset-3">

      <div class="form-group">
        <%= f.label :enabled, "Enable App?" %>
        <%= f.check_box :enabled, class: "form-control" %>
        <p>Current credits: <%= @shop.credit %></p>
      </div>

      <div class="form-group">
        <%= f.label :international, "Send cards to International (outside of the U.S.) Customers? (2 credits/card)" %>
        <%= f.check_box :international, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :send_delay, "Delay postcard arrival for" %>
        <%= f.number_field :send_delay, class: "form-control", :id => "settings_delay", :style => "width: 15%; display: inline;" %><b> weeks after purchase</b>
      </div>

      <div class="form-group">
        <%= f.submit "Update", :class => "btn btn-lg btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
