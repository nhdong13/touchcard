<%= javascript_include_tag "card_editor" %>
<% if @card_template.style == "thank you" %>
  <div class="row">
    <div class="col-md-3 col-md-offset-9">
      <%= link_to "Switch to Coupon Template", style_switch_card_template_path(@card_template), :class => "template_switch" %>
    </div>
  </div>
  <h1> Create Your <%= @card_template.style.titleize %> Card</h1>
  <div class="row">
    <div class="col-md-10">
      <h4>Get started with our postcard builder.
        You can choose to remove editable areas and upload custom backgrounds.
        To add a dynamic coupon area, 
        <%= link_to "switch to the coupon card template", style_switch_card_template_path(@card_template), :class => "template_switch" %>
      </h4>
    </div>
  </div>
  <%= render 'card_templates/edit_thank' %>
<% else %>
  <div class="row">
    <div class="col-md-3 col-md-offset-9">
      <%= link_to "Switch to Thank You Template", style_switch_card_template_path(@card_template), :class => "template_switch" %>
    </div>
  </div>
  <h1> Create Your <%= @card_template.style.titleize %> Card</h1>
  <div class="row">
    <div class="col-md-10">
      <h4>Get stated with our postcard builder.
        You can choose to remove editable areas and upload custom backgrounds.
        To remove the coupon area,
        <%= link_to "switch to the thank you card template", style_switch_card_template_path(@card_template), :class => "template_switch" %>
      </h4>
    </div>
  </div>
  <%= render 'card_templates/edit_coupon' %>
<% end %>
