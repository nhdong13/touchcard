<%= currently_at "Targerting" %>
<%= link_to "Download", get_targeting_index_path(accepted: @accepted_attrs, removed: @removed_attrs, format: :csv), method: :post  %>
<table>
  <thead>
    <tr>
      <th>Customer ID</th>
      <th>Fullname</th>
      <% @accepted_attrs[:filter].each do |filter| %>
        <th><%= filter %></th>
      <% end %>
  </thead>
  <tbody>
    <% @customers.values.each.with_index(1) do |cus, index| %>
      <tr>
        <td><%= index %></td>
        <% (0..(@accepted_attrs[:filter].size + 1)).each do |pos| %>
          <td><%= cus[pos] %></td>
        <% end %>
      </tr>
    <% end %>
    <% if @customers.empty? %>
      <tr><td colspan="2">No customer matched conditions.</td></tr>
    <% end %>
  </tbody>
</table>
