<% field_group = is_accepted ? "accepted" : "removed" %>
<div class="filter-container">
  <% unless is_first_filter %>
    <p class="text-center">AND</p>
  <% end %>
  <%= select_tag field_group + "[filter][]", options_for_select(FILTER_OPTIONS), class: "filter" %>
  <%= select_tag field_group + "[condition][]", options_for_select(CONDITIONS) %>
  <%= number_field_tag field_group + "[value][]", 0, required: true %>
  
  <div class="dropdown">
    <%= image_tag "options.svg", class: "option-btn" %>
    <div class="dropdown-content">
      <p class="remove-filter">Remove filter</p>
    </div>
  </div>
</div>
